<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Entities.UnitDealer" table="unit_dealer">
        <composite-id name="id" class="Entities.UnitDealerId">
            <key-property name="dealerId" type="java.lang.Integer" >
                <column name="dealer_id"></column>
            </key-property>
            <key-property name="unitId" type="java.lang.Integer">
                <column name="unit_id"></column>
            </key-property>
        </composite-id>

        <many-to-one name="dealer" class="Entities.Dealer" update="false" insert="false" fetch="select">
            <column name="dealer_id" not-null="true"></column>
        </many-to-one>

        <many-to-one name="unit" class="Entities.Unit" update="false" insert="false" fetch="select">
            <column name="unit_id" not-null="true"></column>
        </many-to-one>

        <property name="price" type="java.lang.Double">
            <column name="price" not-null="true"></column>
        </property>

    </class>
</hibernate-mapping>